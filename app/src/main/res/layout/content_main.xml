<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:showIn="@layout/activity_main"
    tools:context=".list_of_sketch">


    <ListView
        android:id="@+id/list_view_sketch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/activity_margin"/>

    <RelativeLayout
        android:id="@+id/empty_view212"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        >


        <TextView
            android:id="@+id/empty_title_text212"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-medium"
            android:paddingTop="36dp"
            android:textSize="30dp"
            android:text="NO SKETCHES TO SHOW !"
            android:textAppearance="?android:textAppearanceMedium"
            />

        <TextView
            android:id="@+id/empty_subtitle_text212"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/empty_title_text212"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif"
            android:paddingTop="8dp"
            android:text="It feels so lonely here."
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="#A2AAB0"
            />
        <TextView
            android:id="@+id/empty_subtitle_text2122"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/empty_subtitle_text212"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif"
            android:paddingTop="8dp"
            android:text="Start adding sketches."
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="#A2AAB0" />
        <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
            android:layout_centerInParent="true"
        android:layout_below="@+id/empty_subtitle_text2122"
        android:src="@drawable/sun_happy"/>


</RelativeLayout>
</RelativeLayout>